@import url('http://allfont.ru/allfont.css?fonts=pt-sans')
@import url('http://allfont.ru/allfont.css?fonts=pt-sans-bold')

//variables
brown = #280100
active = #ebebeb
red = #ff1000
blue = #385ba2
lightblue = #54a3e1
animation = .5s ease all

//mixins
 media(maxWidth)
  @media screen and (max-width: maxWidth)
      {block}
//helpers
.mod
	&__tac
		text-align center
	&__taj
		text-align justify
	&__ttu
		text-transform uppercase
	&__bold
		font-weight 600
	&__tdu
		padding-bottom 1px
		border-bottom 1px solid
	&__flex
		display -webkit-flex
		display -moz-flex
		display -ms-flex
		display -o-flex
		display flex
		justify-content space-between
		align-items center
		flex-wrap wrap
		&__start
			justify-content flex-start
	&__semi
		width 50%
		+media(768px)
			width 100%
		
.mobile
	display none
	+media(960px)
		display block
		
.tablet
	display none
	+media(768px)
		display block

.desktop
	display block
	+media(960px)
		display none

//main
html
	font-family: 'PT Sans', arial
	
div, li, a, p, button, input
	transition animation	

img
	width 100%

body
	margin: 0
	padding: 0
	box-sizing: border-box
	background: url(../img/body.jpg) top center no-repeat
	background-size: contain

header
	width 100%
	max-width 1170px
	margin 0 auto
	padding-top calc(100px + .5em)
	+media(1280px)
		max-width 940px
	
h2
	font-size 24px
	font-family: 'PT Sans Bold', arial
	text-transform uppercase
	text-align center
	line-height 1.5
	+media(1280px)
		line-height 1.2
		font-size 22px
	+media(960px)
		line-height 1
		font-size 16px

h3
	text-align center
	text-transform uppercase
	color lightblue
	font-size 18px
	line-height 2

h4
	text-align center
	text-transform uppercase
	color red
	font-size 18px
	font-family: 'PT Sans Bold', arial
	line-height 2

input
	border 0
	outline 0
	background active
	width 335px
	height 36px
	margin .5em auto
	padding 0 1em
	box-sizing border-box
	text-align center

li
	list-style: none
	
p
	font-size 16px

nav
	display -webkit-flex
	display -moz-flex
	display -ms-flex
	display -o-flex
	display flex
	justify-content space-between
	align-items center
	position fixed
	top 0
	left 0
	right 0
	max-width 1170px
	width 100%
	margin 0 auto
	z-index 1001
	+media(1280px)
		max-width 940px
		a
			flex-shrink 0
	+media(960px)
		a
			flex-shrink 1
		.logo
			img
				width 95%
	+media(768px)
		a
			flex-shrink 0
		.logo
			img
				width auto
				height 60px

a
	text-decoration none
	color brown
	font-size 14px

section
	width 100%
	max-width 1170px
	margin 0 auto
	padding 2em 0
	+media(1280px)
		max-width 940px
	+media(480px)
		padding 0

footer
	display -webkit-flex
	display -moz-flex
	display -ms-flex
	display -o-flex
	display flex
	justify-content space-between
	align-items center
	width 100%
	max-width 1170px
	margin 0 auto
	+media(1280px)
		max-width 940px
	+media(640px)
		flex-direction column
		a, p, div
			margin-top 1em
		.phone
			flex-direction column
	a
		&.btn
			height 32px

:-ms-input-placeholder
	color: brown
	text-align center
	font-size 14px
	transition animation
:-moz-placeholder
	color: brown
	text-align center
	font-size 14px
	transition animation
::-webkit-input-placeholder
	color: brown
	text-align center
	font-size 14px
	transition animation
::-moz-placeholder
	color: brown
	text-align center
	font-size 14px
	transition animation
:focus::-webkit-input-placeholder 
	color transparent
:focus::-moz-placeholder          
	color transparent
:focus:-moz-placeholder           
	color transparent
:focus:-ms-input-placeholder      
	color transparent

//blocks
.menu
	height 98px
	box-sizing border-box
	display -webkit-flex
	display -moz-flex
	display -ms-flex
	display -o-flex
	display flex
	justify-content space-between
	background #fff
	margin 0
	padding 0
	margin-top -4px 
	width calc(100% - 170px - .5em)
	img
		display none
		+media(768px)
			display block
			height 40px
			margin-top 10px
			&.open
				transform rotate(0)
			&.menu--on
				transform rotate(90deg)
	+media(960px)
		height 60px
		width calc(100% + 20em)
	+media(768px)
		justify-content flex-end
	&--item
		width 100%
		position relative
		background #fff
		+media(768px)
			display none
		a
			height 100%
			width 100%
			position absolute
			text-align center
			line-height 110px
			font-size 16px
			text-transform uppercase
			+media(1280px)
				font-size 12px
			+media(960px)
				line-height 60px
				letter-spacing -1px
			&:hover
				background: active

.cell
	margin 0 .5em 0 .5em
	display -webkit-flex
	display -moz-flex
	display -ms-flex
	display -o-flex
	display flex
	flex-direction column
	height 100px
	justify-content center
	align-items center
	width 100%
	font-family: 'PT Sans Bold', arial
	a
		font-size 18px
	+media(960px)
		height: auto
		width: auto
		margin: 0
		flex-shrink: 0
		letter-spacing: -1px
		font-family: 'PT Sans', arial
		a
			font-size 14px
	+media(768px)
		line-height 60px
		a
			font-size 18px
			font-weight 600
			width 100%
		
.banner
	background: #fff url('../img/banner.jpg') center no-repeat
	background-size contain
	height 380px
	padding 30px
	box-sizing border-box
	+media(960px)
		background: #fff url('../img/banner.jpg') top center no-repeat
		background-size contain
		padding 0
		height auto
	+media(768px)
		background transparent
	&--form
		padding 25px
		border 2px solid blue
		width 50%
		display -webkit-flex
		display -moz-flex
		display -ms-flex
		display -o-flex
		display flex
		flex-direction column
		+media(960px)
			width 100%
			background: rgba(255,255,255, .8)
		+media(768px)
			background: rgba(255,255,255, .8)
			width 90%
			margin-left 5%
			padding 1em
		+media(480px)
			width 100%
			margin-left 0
			padding .3em
		.btn
			width 335px
			height 36px

.btn
	border 0
	outline 0
	background red
	font-size 15px
	color #fff
	text-transform uppercase
	width 154px
	height 32px
	margin-top .5em
	cursor pointer
	&:hover
		background: blue
	&__blue
		background lightblue
		width 100%
		margin-bottom 1em
		&:hover
			background: red

.mansonry
	display -webkit-flex
	display -moz-flex
	display -ms-flex
	display -o-flex
	display flex
	flex-wrap wrap
	justify-content space-between
	align-items center
	margin-top 2em
	+media(960px)
		display none
	&--item
		width 50%
		display -webkit-flex
		display -moz-flex
		display -ms-flex
		display -o-flex
		display flex
		justify-content space-between
		align-items center
		background #fff
		&__img,
		&__description
			width 50%
		&__description
			padding 2em
			height 292px !important
			box-sizing border-box 
			+media(1280px)
				overflow hidden
				padding 1em
				height 250px !important
				position relative
				&::after
					position: absolute
					bottom: 0
					width: 100%
					left: 0
					padding: .5em
					background: #fff
					content: ""
					height: 1.5em
				h4
					line-height 1
			
.about
	display -webkit-flex
	display -moz-flex
	display -ms-flex
	display -o-flex
	display flex	
	justify-content space-between
	border 3px solid lightblue
	padding 2em 0
	margin 2em 0
	+media(768px)
		border 0
		flex-direction column
		padding 1em
	&--item
		display -webkit-flex
		display -moz-flex
		display -ms-flex
		display -o-flex
		display flex
		flex-direction column
		justify-content center
		align-items center
		border-right 2px solid lightblue
		width 25%
		+media(768px)
			width 100%
			border-bottom 2px solid lightblue
			border-right none
			padding 1em
		h3
			line-height 1
			font-weight 600
		&:nth-child(4)
			border 0
		img
			width 35%

#price
	width 100%
	background: url('../img/body-2.jpg') center no-repeat
	background-size cove
article
	&.price
		background #fff
		padding 1em
		border 2px solid lightblue
		.btn
			width 80%
			margin 0 10%
			height 36px
	&.work
		display -webkit-flex
		display -moz-flex
		display -ms-flex
		display -o-flex
		display flex
		justify-content space-between
		flex-wrap wrap
		border 2px solid lightblue
		padding 1em
		img
			width 32% !important
		p
			width 100%
.summ
	font-size 20px
	font-weight 600
	letter-spacing .01em
	text-transform none
.owl-carousel
	margin-top 2em
.owl-carousel .owl-dots.disabled
	display block !important
.owl-prev,
.owl-next
	display none !important
.owl-dot
	flex-shrink 0
#call
	background: url('../img/body-2.jpg') center no-repeat
	background-size cover
	padding 1em 0
	form
		width 55%
		display -webkit-flex
		display -moz-flex
		display -ms-flex
		display -o-flex
		display flex
		flex-direction column
		justify-content center
		align-items center
		input
			width 456px
		.btn
			width 456px
			height 36px
		+media(768px)
			width 100%
			input
				width 300px
			.btn
				width 300px
	.blue
		color lightblue
	.red
		color red
	.form
		display -webkit-flex
		display -moz-flex
		display -ms-flex
		display -o-flex
		display flex
		justify-content space-around
		align-items center
		border 2px solid lightblue
		width 100%
		max-width 1170px
		margin 2em auto
		padding 1em
		background #fff
		+media(1280px)
			max-width 940px
		img
			width 25% !important
			+media(768px)
				display none
.map
	padding .5em
.contact
	border 2px solid lightblue
	padding 1em 3em
	box-sizing border-box
	min-height 312px
	&--string
		text-transform uppercase
		font-size 18px
		font-weight 600
		color lightblue
		line-height 1.5
	p.social
		font-size 18px
	figure
		margin-left -1em
			

//elements
#send
	position fixed
	z-index 9999
	background: rgba(0,0,0, .5)
	width 100%
	height 100%
	left 0
	top 0
	cursor pointer
	display none
	.message
		position absolute
		left 0
		right 0
		width 100%
		max-width 480px
		background #fff
		margin 0 auto
		padding 2em
		border 2px solid lightblue
		box-shadow 0 0 0 1em #fff
		height 10em
		top calc(50% - 5em)
		.blue
			color lightblue

.mobile__menu
	position: fixed
	background: rgba(255,255,255, .95)
	left: 0
	z-index: 1002
	width: 100%
	height: calc(100vh - 59px)
	-webkit-flex-direction: column
	-ms-flex-direction: column
	flex-direction: column
	-webkit-justify-content: space-around
	-ms-flex-pack: distribute
	justify-content: space-around
	-webkit-align-items: center
	-ms-flex-align: center
	align-items: center
	bottom: 0px
	display none
	&.show
		display: -webkit-flex
		display: -moz-flex
		display: -ms-flex
		display: -o-flex
		display: -ms-flexbox
		display: flex


.soc
	height 2.5em
	max-width 4em
	&.vk
		height 3.5em

.price-list
	color lightblue
	font-weight 600
	border 2px solid 
	position relative
	display -webkit-flex
	display -moz-flex
	display -ms-flex
	display -o-flex
	display flex
	justify-content center
	align-items center
	padding 1em 2em
	width 27em
	margin 2em auto
	+media(768px)
		width 23em
	img
		position relative
		height 3em
		width auto
		margin-right .5em

span
	&.big-red
		font-size 30px
		color red
		+media(1280px)
			font-size 24px
		+media(960px)
			font-size 18px

//solutions
.owl
	&-carousel
		position relative
	&-nav
		display flex
		justify-content space-between
		width calc(100% + 36px + 20px)
		position absolute
		left calc(-16px - 10px)
		top calc(50% - 19px - 1em)
	&-dots
		display flex
		width 50%
		margin 1em auto
		justify-content center
		position relative
	&-dot
		width 15px !important
		height 15px !important
		margin 5px
		background transparent !important
		border-radius 50%
		transition .5s ease
		border 2px solid lightblue
		&:hover
			background #cbcbcb
		&.active
			width 15px !important
			height 15px !important
			margin 5px
			background lightblue !important
			border-radius 50% 
.owl-carousel
	margin-top 2em
.owl-carousel .owl-dots.disabled
	display block !important
.owl-prev,
.owl-next
	display none !important
	

